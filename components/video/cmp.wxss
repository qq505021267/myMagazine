/* components/video/cmp.wxss */

.container {
    width: 700rpx;
}

.container .video {
    width: 700rpx;
    height: 400rpx;
    z-index: 999;
}

.container .poster-container {
    position: relative;
    width: 700rpx;
    height: 400rpx;
}

.poster-container .poster {
    width: 100%;
    height: 100%;
}

.poster-container .controler {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -50rpx;
    margin-top: -50rpx;
    width: 100rpx;
    height: 100rpx;
    background-color: rgba(0, 0, 0, .6);
    border-radius: 50%;
}

.controler .play-btn {
    width: 30rpx;
    height: 30rpx;
    margin-top: 20rpx;
}

.controler .duration {
    font-size: 24rpx;
    color: #fff;
}

.container .main-title {
    font-size: 40rpx;
    padding: 20rpx;
}

.container .mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 1334rpx;
    background-color: rgba(0, 0, 0, .6);
}