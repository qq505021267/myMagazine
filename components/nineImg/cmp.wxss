/* components/nineImg/cmp.wxss */

.container {
    width: 700rpx;
}

.img-container {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    width: 700rpx;
    height: 700rpx;
}

.img-container .image {
    width: 31%;
    height: 31%;
}

.img-num {
    position: absolute;
    padding: 5rpx 10rpx;
    right: 15.5%;
    bottom: 15.5%;
    transform: translate(50%, 50%);
    background-color: rgba(0, 0, 0, .7);
    color: #fff;
    font-size: 24rpx;
}

.mainTitle {
    padding: 0 30rpx;
    font-size: 40rpx;
    font-weight: 400;
    letter-spacing: 2rpx;
}