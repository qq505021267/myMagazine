/* pages/catalog/catalog.wxss */

.markContainer {
    margin: 0 auto;
    width: 700rpx;
}

.markContainer .markControl {
    display: flex;
    justify-content: space-between;
    margin: 40rpx 0;
    align-items: flex-end;
}

.markControl .myMagazine {
    font-size: 40rpx;
}

.markControl .manageMagazine {
    font-size: 30rpx;
}

.tagListContainer {
    width: 700rpx;
    margin: 50rpx auto 0;
}

.tagListContainer .tag {
    display: flex;
    justify-content: space-between;
    margin: 30rpx 0;
}

.tag-text {
    font-size: 28rpx;
}