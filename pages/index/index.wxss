/* pages/index/index.wxss */

.loadingWrapper {
    position: fixed;
    top: 0;
    left: 0;
    background-color: #fff;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.loading {
    position: absolute;
    left: 50%;
    top: 50%;
    margin-top: -30rpx;
    margin-left: -30rpx;
}

.navigation {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
}

.recommend {
    display: block;
    margin-top: 110rpx;
}

.toCatalog {
    display: inline-block;
    border: 2rpx solid #000;
    padding: 10rpx 20rpx;
    font-size: 28rpx;
}